pragma solidity ^0.8.18;

import {Script} from "forge-std/Script.sol";
import {Test, console} from "forge-std/Test.sol";
import {StdCheats} from "forge-std/StdCheats.sol";
import {MoodNFT} from "../../src/MoodNFT.sol";
import {DeployMoodNFT} from "../../script/DeployMoodNFT.s.sol";

contract MoodNFTTest is Test {
    MoodNFT public moodNFT;
    address private USER = makeAddr("user");

    string private constant HAPPY_SVG_IMAGE_URI =
        "data:image/svg+xml;base64,";
    string private constant SAD_SVG_IMAGE_URI =
        "data:image/svg+xml;base64,";
    string private constant HAPPY_SVG_JSON_URI =
        "data:application/json;base64,";
    string private constant SAD_SVG_JSON_URI =
        "data:application/json;base64,";

    function setUp() public {
        DeployMoodNFT deployer = new DeployMoodNFT();
        moodNFT = deployer.run();
    }

    function testViewTokenUri() public {
        vm.prank(USER);
        moodNFT.mintNft();
        console.log(moodNFT.tokenURI(0));
        assert(
            keccak256(abi.encodePacked(moodNFT.tokenURI(0))) ==
                keccak256(abi.encodePacked(HAPPY_SVG_IMAGE_URI))
        );
    }

    function testFlip() public {
        vm.prank(USER);
        moodNFT.mintNft();

        vm.prank(USER);
        moodNFT.flipMood(0);

        assertEq(
            keccak256(abi.encodePacked(moodNFT.tokenURI(0))),
            keccak256(abi.encodePacked(HAPPY_SVG_JSON_URI))
        );
    }
}
